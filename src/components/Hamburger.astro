<div class="hamburger float-right fixed top-0 right-0">
  <span class="line"></span>
  <span class="line"></span>
  <span class="line"></span>
  <svg
    class="xmark"
    xmlns="http://www.w3.org/2000/svg"
    width="50"
    height="50"
    viewBox="0 0 256 256"
  >
    <path
      fill="white"
      d="M204.24 195.76a6 6 0 1 1-8.48 8.48L128 136.49l-67.76 67.75a6 6 0 0 1-8.48-8.48L119.51 128L51.76 60.24a6 6 0 0 1 8.48-8.48L128 119.51l67.76-67.75a6 6 0 0 1 8.48 8.48L136.49 128Z"
    ></path>
  </svg>
  <script>
    import "../scripts/close.js";
  </script>
</div>

<style>
  .hamburger {
    padding-top: 20px;
    padding-right: 20px;
    cursor: pointer;
  }

  .hamburger .line {
    display: block;
    width: 40px;
    height: 5px;
    margin-bottom: 10px;
    background-color: white;
  }

  .xmark {
    opacity: 0;
    height: 0;
    position: absolute;
    right: 1rem;
    top: 1rem;
  }

  .line-expanded {
    height: 0;
    opacity: 0;
    margin: 0;
    padding: 0;
  }

  .xmark-expanded {
    opacity: 1;
    height: 50px;
  }

  @media screen and (min-width: 636px) {
    .hamburger {
      display: none;
    }
  }
</style>
